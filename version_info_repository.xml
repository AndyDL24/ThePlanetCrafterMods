<?xml version="1.0" encoding="utf-8"?>
<version_info_repository>
    <plugin guid="akarnokd.theplanetcraftermods.miscpluginupdatechecker" 
            description="(Misc) Plugin Update Checker">
        <version discover="https://raw.githubusercontent.com/akarnokd/ThePlanetCrafterMods/main/MiscPluginVersionChecker/plugin.cs" 
                         method="BepInPluginVersionQuote"/>
        <!--
        method="BepInPluginVersionQuote": parse the BepInPlugin annotation for the version tag
        method="CsprojVersionTag": parse the csproj as XML and locate the version tag.
        
        other methods may come
        -->
        <!--
        or use explicit version number
        
        <version value="1.0.0.1"/>
        -->
        <changelog>
            <entry version="1.0.0.0" title="Initial Release" 
                   link="https://github.com/akarnokd/ThePlanetCrafterMods/releases/latest">
                
            </entry>
        </changelog>
    </plugin>
    <!--
    We can include some other repository info source.
        <include url="https://raw.githubusercontent.com/somemodder987/ThePlanetCrafterMods/main/their_version_info_repository.xml" />
    -->
</version_info_repository>